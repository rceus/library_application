<h1>Book Records</h1><hr><br>

<table>
  <tr>
    <th>Name</th>
    <th>ISBN</th>
    <th>Author</th>
    <th>Publisher</th>
    <th>Category</th>
    <th>Status</th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.name %></td>
    <td><%= book.isbn %></td>
    <td><%= book.author_id %></td>
    <td><%= book.publisher_id %></td>
    <td><%= book.category_id %></td>
    <td><%= book.status %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Go Back to Book Essentials', bookview_index_path %>
