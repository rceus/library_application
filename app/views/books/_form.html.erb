<%= simple_form_for @book, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name, placeholder: 'Book Name' %>
  <%= f.input :isbn , placeholder: '3467674367434673', label:'ISBN'%>
  <!--<%= f.input :author_id %>-->
  <%= f.input :author_id, as: :select, collection: Author.find(:all, :order=> "first_name, last_name").collect {|s|
      [(s.first_name+" "+s.last_name),s.id]}%>
  <%= f.input :publisher_id, as: :select, collection: Publisher.find(:all, :group=>"name", :order=> "name").collect {|s|
      [(s.name),s.id]} %>
  <%= f.input :category_id, as: :select, collection: Category.find(:all, :group=>"genre", :order=> "genre").collect {|s|
      [(s.genre),s.id]} %>
  <%= f.input :status, placeholder: 'Reference/Issued/Available'  %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to 'Cancel', bookview_index_path, :class => 'btn' %>
  </div>
<% end %>

