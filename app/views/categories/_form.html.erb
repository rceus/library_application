<%= simple_form_for @category, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :genre, placeholder: 'Genre' %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to 'Cancel', categoriesview_index_path , :class => 'btn' %>
  </div>
<% end %>
